<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" tools:ignore="NewApi">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" >false</item><!--禁止系统自动转色app-->
    </style>

    <style name="SplashTheme" parent="AppTheme" tools:ignore="NewApi">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowLightStatusBar">true</item><!--Android6.0,SDK23才能生效-->
        <item name="android:windowLightNavigationBar">true</item><!--Android8.1,SDK27才能生效-->
        <!--兼容安卓12以下启动页不要显示无效占位色块-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast">false</item><!--Android10,SDK29才能生效-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item><!--Android8.1,SDK27才能生效-->
        <item name="android:enforceNavigationBarContrast">false</item><!--Android10,SDK29才能生效-->
    </style>

    <style name="SecondTheme" parent="AppTheme" tools:ignore="NewApi">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="CommonDialog" parent="Theme.AppCompat.DayNight.Dialog" tools:ignore="NewApi">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:forceDarkAllowed" >false</item><!--禁止系统自动转色app-->
    </style>

    <style name="NewDialog" parent="FullDialog.Style" tools:ignore="NewApi">
        <item name="android:windowLightStatusBar">true</item><!--Android6.0,SDK23才能生效-->
        <item name="android:windowLightNavigationBar">true</item><!--Android8.1,SDK27才能生效-->
    </style>

    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>
